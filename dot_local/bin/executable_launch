#!/bin/sh
set -eu

HELP="usage: launch [-rlh] COMMAND [ARGUMENTS...]
  -h    Show this help
  -r    Restart
  -l    Log to journal"

RESTART=
LOG=
while getopts rlh arg; do
    case $arg in
        r) RESTART=1;;
        l) LOG=1;;
        h) echo "$HELP" && exit 0;;
    esac
done
shift $(($OPTIND - 1))

[ -z ${1+x} ] && echo "$HELP" && exit 1

if [ ! -z $LOG ]; then
    CMD="systemd-cat -t $1 $@ &"
else
    CMD="$@ >/dev/null 2>&1 &"
fi

if [ ! -z $RESTART ]; then
    if killall $1 >/dev/null 2>&1; then
        echo "Stopped \`$1\`"
        echo "Starting \`$@\`"
    else
        echo "Starting \`$@\`"
    fi
    eval "$CMD"
    exit 0
fi

if ! ps -C $1 >/dev/null 2>&1; then
    echo "Starting \`$@\`"
    eval "$CMD"
fi
